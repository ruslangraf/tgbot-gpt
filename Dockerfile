# Используем готовый образ Node.js
FROM node:18.15.0

# Устанавливаем директорию приложения внутри контейнера
WORKDIR /app

# Копируем package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем исходный код приложения внутрь контейнера
COPY . .
#ENV PORT = 3000
#EXPOSE $PORT

# Устанавливаем переменную окружения с токеном Telegram-бота
#

# Запускаем команду для запуска приложения
CMD [ "npm", "start" ]
